{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "lib": [
      "DOM"
    ],
    "baseUrl": "./src/",
    "paths": {
      "scenes": [
        "scenes"
      ],
      "api": [
        "api"
      ],
      "components": [
        "components"
      ],
      "pods": [
        "pods"
      ],
      "types": [
        "types"
      ],
    }
  },
  "include": [
    "src/**/*",
    "tstypes.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}